{
  "start": {
    "description": "Start the game server",
    "command": "./csgoserver start"
  },
  "stop": {
    "description": "Stop the game server",
    "command": "./csgoserver stop"
  },
  "restart": {
    "description": "Restart the game server",
    "command": "./csgoserver restart"
  },
  "console": {
    "description": "Access the game server console",
    "command": "./csgoserver console",
    "exit_instructions": "To exit the console press CTRL+b d. Pressing CTRL+c will terminate the server."
  },
  "update": {
    "description": "Check for and apply server updates",
    "command": "./csgoserver update"
  },
  "force-update": {
    "description": "Force update using SteamCMD",
    "command": "./csgoserver force-update"
  },
  "validate": {
    "description": "Validate server files using SteamCMD",
    "command": "./csgoserver validate"
  },
  "details": {
    "description": "Retrieve server details",
    "command": "./csgoserver details"
  },
  "debug": {
    "description": "Start the server in debug mode",
    "command": "./csgoserver debug",
    "exit_instructions": "To exit debug mode, simply close the terminal."
  },
  "backup": {
    "description": "Create a server backup",
    "command": "./csgoserver backup"
  },
  "monitor": {
    "description": "Monitor the game server and restart if needed",
    "command": "./csgoserver monitor"
  }
}
